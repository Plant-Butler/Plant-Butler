<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
      PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
   "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="mapper.test">

	<select id="selectBoardList" resultType="com.plant.vo.TestVo">
      <![CDATA[
         select * from board_table	
      ]]>
	</select>
	
	<insert id="write" parameterType="com.plant.vo.TestVo">
      <![CDATA[
         insert into board_table (title, content, writer, regdate)
         values (#{title}, #{content}, #{writer}, now())
      ]]>
	</insert>

 </mapper>