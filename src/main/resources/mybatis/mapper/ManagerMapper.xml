<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.plant.dao.ManagerMapper">
    <resultMap id="UserResultMap" type="com.plant.vo.UserVo">
        <result column="user_id" property="userId"/>
        <result column="nickname" property="nickname"/>
        <result column="password" property="password"/>
        <result column="email" property="email"/>
        <result column="point" property="point"/>
        <result column="manager" property="manager"/>
    </resultMap>

    <select id="getUserList" resultMap="UserResultMap">
        <![CDATA[
         select * from user order by point desc
        ]]>
    </select>

    <insert id="selectBestUser" parameterType="String">
        <![CDATA[
         insert into bestuser (user_id)
         values (#{userId})
      ]]>
    </insert>

</mapper>